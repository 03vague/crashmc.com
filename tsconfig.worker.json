{
  "include": ["docs/.vitepress/workers/*", "docs/.vitepress/**/*.api.ts"],
  "compilerOptions": {
    "composite": true,

    "lib": [
      "es2020",
      "webworker",
    ],

    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    "noImplicitThis": true,
    "strict": true,

    "verbatimModuleSyntax": true,

    "target": "ESNext",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./docs/.vitepress/*"],
    },
    "outDir": "out"
  }
}